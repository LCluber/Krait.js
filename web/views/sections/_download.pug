section( id='download' class='container content-section text-center' )
  div( class='row' )
    div( class='col-lg-8 col-lg-offset-2' )
      h2=t('section.download.h2')
      ul( class='list-inline banner-social-buttons' )
        li
          a( href='dist/krait.iife.min.js' class='btn btn-default btn-lg' target='_blank' download='krait.iife.min.js' title='Minified IIFE library')=t('section.download.min')
        li
          a( href='https://www.npmjs.com/package/@lcluber/kraitjs' class='btn btn-default btn-lg' target='_blank' title='Install with NPM')
            =t('section.download.npm')
            i( class='fab fa-npm' )
        li
          a( href='https://github.com/LCluber/Krait.js' class='btn btn-default btn-lg' target='_blank' title='Sources for the entire project')
            =t('section.download.github')
            i( class='fab fa-github' )
